<%= form_with(model: usuario, local: true) do |form| %>
  <% if usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

      <ul>
      <% usuario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<form class="form-horizontal">
  <div class="form-group">
    <label for="usuario_nombre" class="col-sm-2 control-label">Usuario</label>
    <div class="col-sm-10">
      <%= form.text_field :nombre, id: :usuario_nombre, class: "form-control", placeholder: "Nombre"%>
    </div>
  </div>
  <div class="form-group">
    <label for="password_digest_usuario_password_digest" class="col-sm-2 control-label">Contraseña</label>
    <div class="col-sm-10">
      <%= password_field :password_digest, :usuario_password_digest, class: "form-control" , placeholder: "contraseña"%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="actions">
        <button type="submit" class="btn btn-default">
          <%= form.submit %>
        </button>
      </div>
    </div>
  </div>
</form>

